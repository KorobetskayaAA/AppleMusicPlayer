<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Colors -->
    <Color x:Key="BackgroundColor">#223</Color>
    <Color x:Key="ForegroundColor">#FFF</Color>
    <Color x:Key="BorderColor">#EEE</Color>
    <Color x:Key="DisabledBackgroundColor">#8333</Color>
    <Color x:Key="PressedBackgroundColor">#001</Color>
    <Color x:Key="ActiveBackgroundColor">#733</Color>

    <SolidColorBrush x:Key="NormalBackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="NormalForegroundBrush" Color="{StaticResource ForegroundColor}"/>
    <SolidColorBrush x:Key="NormalBorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="ActiveBackgroundBrush" Color="{StaticResource ActiveBackgroundColor}"/>
    <SolidColorBrush x:Key="DisabledBackgroundBrush" Color="{StaticResource DisabledBackgroundColor}"/>

</ResourceDictionary>